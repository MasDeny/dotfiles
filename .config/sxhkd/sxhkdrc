# terminal emulator
super + Return
	alacritty

# program launcher
super + @space
	rofi -modi run,drun -show drun -columns 1 -width 24 -lines 8 -padding 45 -hide-scrollbar -show-icons -drun-icon-theme "Papirus"

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# Open sxhkdrc config file
super F1
	alacritty -e nvim $HOME/.config/sxhkd/sxhkdrc

#
# bspwm hotkeys
#

# quit/restart bspwm
super + shift + {c,r}
    bspc {quit,wm -r}


# close and kill
super + {_,shift + }q
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# swap the current node and the biggest node
super + g
	bspc node -s biggest



#
# state/flags
#

# set the window state
super + {t,shift + t,s ,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
#super + ctrl + {m,x,y,z}
#	bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

# focus the next/previous node in the current desktop
super + {_,shift + }Tab
	bspc node -f {next,prev}.local

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
    bspc {desktop -f,node -d} focused:'^{1-9,10}'


#
# preselect
#

# preselect the direction
super + ctrl + {Left,Down,Up,Right}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {Left,Down,Up,Right}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + ctrl + {Left,Down,Up,Right}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# ===================================
# ========== User-specific ==========
# ===================================

super + alt + w
	brave

super + alt + r
	alacritty -e ranger

super + alt + e
	$HOME/.config/rofi/edit-configs.sh

super + alt+ shift + r
	alacritty -e sudo ranger

super + x
   sudo betterlockscreen -l

super + alt + s
    deepin-screen-recorder

super + shift + m
    spotify

super + alt + c
    code


super + ctrl + z
    xrandr --output DisplayPort-0 --primary --mode 1920x1080 --pos 0x0 --rotate normal --output HDMI-A-0 --off --output DisplayPort-1 --off --output DisplayPort-2 --off

super + ctrl + x
    xrandr --output DisplayPort-0 --primary --mode 2560x1440 --pos 0x0 --rotate normal --output HDMI-A-0 --off --output DisplayPort-1 --off --output DisplayPort-2 --off

# Screen brightness control
XF86MonBrightnessDown
    sudo light -U 10
XF86MonBrightnessUp
    sudo light -A 10
# Volume control
XF86AudioRaiseVolume
    /usr/bin/pulseaudio-ctl up 10
XF86AudioLowerVolume
    /usr/bin/pulseaudio-ctl down 10
XF86AudioMute
    pactl set-sink-mute 0 toggle
# Play/pause
XF86AudioPlay
    dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause 
# Next/prev
XF86AudioNext
    dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next
XF86AudioPrev
    dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous

